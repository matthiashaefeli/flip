<%= form_with model: @material do |form| %>
  <div class='form_fields'>
    <div><%= form.text_field :name, placeholder: 'name' %></div>
    <div><%= form.number_field :quantity, placeholder: 'quantity' %></div>
    <div><%= form.date_field :ordered %></div>
    <div><%= form.date_field :received %></div>
    <div><%= form.submit %></div>
  </div>
  <%= form.hidden_field :project_id, value: @project.id %>
<% end %>