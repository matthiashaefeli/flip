<h1>Condtitions:</h1>
<p><%= link_to 'New Condition', new_condition_path(project: @project) %></p>
<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Status</td>
      <td>Initial Condition</td>
    </tr>
  </thead>
  <tbody>
    <% @project.conditions.each do |condition| %>
      <tr>
        <td><%= link_to condition.name, condition_path(condition) %></td>
        <td><%= condition.status %></td>
        <td><%= condition.initial_condition %></td>
      </tr>
    <% end %>
  </tbody>
</table>