<%= form_with model: @condition do |form| %>
  <%= form.text_field :name, placeholder: 'Name' %>
  <%= form.text_field :initial_condition, placeholder: 'Initial Condition' %>
  <%= form.select(:status, Condition.statuses.keys) %>
  <%= form.submit %>
  <%= form.hidden_field :project_id, value: @project.id %>
<% end %>