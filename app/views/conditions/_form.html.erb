<br>
<%= form_with model: @condition do |form| %>
  <div class='form_fields'>
    <div><%= form.text_field :name, placeholder: 'Name' %></div>
    <div><%= form.text_field :initial_condition, placeholder: 'Initial Condition' %></div>
    <div><%= form.select(:status, Condition.statuses.keys) %></div>
    <div><%= form.submit %></div>
  </div>
  <%= form.hidden_field :project_id, value: @project.id %>
<% end %>